
@model WeatherForecast.Models.Weather


@foreach (var items in Model.main)
{
    var temperature = Convert.ToInt32(items.temp);
    <div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="row card0">
                <div class="card1 col-lg-8 col-md-7">
                    <div class="text-center"> <img class="image mt-5" src="https://i.imgur.com/M8VyA2h.png"> </div>
                    <br />
                    <br />
                    <br />                    
                    <div class="row px-3 mt-3 mb-3">
                        <h1 class="large-font mr-3">@temperature&#8451;</h1>
                        @foreach (var sys in Model.sys)
                        {
                    <div class="d-flex flex-column mr-3">
                        <h2 class="mt-3 mb-0">@Model.Name  @sys.country</h2> @if (Model.TimeZone > 0)
                        {<small>GMT + @((Model.TimeZone) / 3600)</small>}
                        else
                        { <small>GMT @((Model.TimeZone) / 3600)</small>}

                    </div>
                            <div class="d-flex flex-column text-center">
                                <h3 class="fa fa-sun-o mt-4"></h3> 
                            </div>
                        }
                    </div>
                </div>
                <div class="card2 col-lg-4 col-md-5">
                    <div class="mr-5">
                        <div class="line my-5"></div>

                        <div class="row px-3">
                            <p class="light-text">Country</p>
                            <p class="ml-auto">@Model.sys.First().country</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Humidity</p>
                            <p class="ml-auto">@items.humidity%</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Temp</p>
                            <p class="ml-auto">@items.temp&#8451;</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Temp_Max</p>
                            <p class="ml-auto">@items.temp_max&#8451;</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Temp_Min</p>
                            <p class="ml-auto">@items.temp_min&#8451;</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Pressure</p>
                            <p class="ml-auto">@items.pressure hPa</p>
                        </div>
                        @foreach (var wind in Model.wind)
                        {
                            <div class="row px-3">
                                <p class="light-text">Wind-Speed</p>
                                <p class="ml-auto">@wind.speed m/s</p>
                            </div>
                            <div class="row px-3">
                                <p class="light-text">Wind-Deg</p>
                                <p class="ml-auto">@wind.deg&#176;</p>
                            </div>
                        }
                        <div class="row px-3">
                            <p class="light-text">Sunrise</p>
                            <p class="ml-auto">@Model.sys.First().sunrise&#127749;</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Sunset</p>
                            <p class="ml-auto">@Model.sys.First().sunset&#127751;;</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Latitude</p>
                            <p class="ml-auto">@Model.coord.First().lat</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Longitude</p>
                            <p class="ml-auto">@Model.coord.First().lon</p>
                        </div>
                        <div class="row px-3">
                            <p class="light-text">Clouds</p>
                            <p class="ml-auto">@Model.clouds.First().all%</p>
                        </div>
                        <div class="line mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts
{
    <link href="~/css/weather.css" rel="stylesheet" />
}
